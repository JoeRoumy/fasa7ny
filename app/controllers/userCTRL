let Activity = require('../models/activity');
let ServiceProvider = require('../models/serviceProvider');

let userCTRL = {

//2.6 comparing activities or service providers
getActivitiesToCompare:function(req, res){
        
        Activity.findOne({_id: req.activity1ID},function(err,activity1){
            
            if(err)
                res.send(err.message);
            else{

                Activity.findOne({_id: req.activity2ID},function(err,activity2){
                    if(err){
                        res.send(err.message);
                    }else {
                            res.send({activity1,activity2});
                    }
                })


            }
        })
    },
